#include <iostream>
using namespace std;
int main(){

	int i =9;
	int *p = &i;
	int *q =p;
	cout<<*q<<endl;
	(*q)++;
	cout<<i<<endl;
	
	// &-- address of
	// *--Location of 
	
	//char array
	char[b]="xyz";
	char *c=&b[0]; // c store the address of start of address of b 
	
	//*c= &b[0] = &b = &b[] = b ;
	// above all are equal  
	
	
	cout<< c<<endl;
	//prints xyz
			

	
char s[]= "hello";
char *p = s;
cout << s[0] << " " << p[0];

// output -- h h

return 0;
}

